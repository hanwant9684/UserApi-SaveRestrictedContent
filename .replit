modules = ["python-3.12", "web"]
[nix]
channel = "stable-25_05"
packages = ["cargo", "ffmpeg", "libiconv", "libuv", "openssl", "rustc", "unzip"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "WSGI Server"

[[workflows.workflow]]
name = "WSGI Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python server_wsgi.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80
